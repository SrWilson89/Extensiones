{
  "manifest_version": 3,
  "name": "Pixel Buddy",
  "version": "1.0",
  "description": "Tu compañero digital que evoluciona con tus hábitos de navegación.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup.html",
    "default_title": "Pixel Buddy"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ]
}